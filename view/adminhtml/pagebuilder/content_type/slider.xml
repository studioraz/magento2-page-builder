<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="slider">
        <appearances>
            <appearance name="default">
                <elements>
                    <element name="main">
                        <attribute name="has_size_desktop"
                                   source="data-has-size-desktop"
                                   converter="SR_PageBuilder/js/content-type/abstract/converter/attribute/has-size"/>
                        <attribute name="has_size_tablet"
                                   source="data-has-size-tablet"
                                   converter="SR_PageBuilder/js/content-type/abstract/converter/attribute/has-size"/>
                        <attribute name="has_size_mobile"
                                   source="data-has-size-mobile"
                                   converter="SR_PageBuilder/js/content-type/abstract/converter/attribute/has-size"/>
                        <style name="image_width_desktop"
                               source="css_var_image_width_desktop"
                               reader="SR_PageBuilder/js/property/css-variable-reader"/>
                        <style name="image_height_desktop"
                               source="css_var_image_height_desktop"
                               reader="SR_PageBuilder/js/property/css-variable-reader"/>
                        <style name="image_width_tablet"
                               source="css_var_image_width_tablet"
                               reader="SR_PageBuilder/js/property/css-variable-reader"/>
                        <style name="image_height_tablet"
                               source="css_var_image_height_tablet"
                               reader="SR_PageBuilder/js/property/css-variable-reader"/>
                        <style name="image_width_mobile"
                               source="css_var_image_width_mobile"
                               reader="SR_PageBuilder/js/property/css-variable-reader"/>
                        <style name="image_height_mobile"
                               source="css_var_image_height_mobile"
                               reader="SR_PageBuilder/js/property/css-variable-reader"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>

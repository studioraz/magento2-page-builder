<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="grid_columns" sortOrder="21" component="SR_PageBuilder/js/form/components/fieldset-with-description">
        <settings>
            <label translate="true">
                {
                    "label": "Grid Columns",
                    "description": "Configure the grid column per screen size. Currently, applicable for Hyva theme only. Note: the number of columns for large screens, typically from 1280px and above, are managed by native Magento page builder capabilities"
                }
            </label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <field name="column_layout_sm" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Number of columns on "sm" screen</label>
            </settings>
        </field>

        <field name="column_layout_md" sortOrder="45" formElement="input">
            <settings>
                <label translate="true">Number of columns on "md" screen</label>
            </settings>
        </field>

        <field name="column_layout_lg" sortOrder="45" formElement="input">
            <settings>
                <label translate="true">Number of columns on "lg" screen</label>
            </settings>
        </field>
    </fieldset>
</form>

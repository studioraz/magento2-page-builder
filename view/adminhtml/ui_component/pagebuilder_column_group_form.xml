<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_base_form_with_background_attributes">
    <fieldset name="general">
        <field name="column_layout_sm" sortOrder="45" formElement="input">
            <settings>
                <label translate="true">Number of columns on "sm" screen</label>
            </settings>
        </field>

        <field name="column_layout_md" sortOrder="45" formElement="input">
            <settings>
                <label translate="true">Number of columns on "md" screen</label>
            </settings>
        </field>

        <field name="column_layout_lg" sortOrder="45" formElement="input">
            <settings>
                <label translate="true">Number of columns on "lg" screen</label>
            </settings>
        </field>
    </fieldset>
</form>
